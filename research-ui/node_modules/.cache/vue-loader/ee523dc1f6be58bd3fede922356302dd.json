              </el-tag>\r\n              </template>\r\n            </el-table-column>\r\n          </el-table>\r\n        </el-card>\r\n      </el-col>\r\n    </el-row>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport * as echarts from 'echarts'\r\n\r\nexport default {\r\n  name: 'Index',\r\n  data() {\r\n    return {\r\n      activities: [\r\n        { content: '项目A完成中期评估', timestamp: '2024-03-20 10:00', type: 'success' },\r\n        { content: '新增科研项目立项申请', timestamp: '2024-03-19 14:30', type: 'primary' },\r\n        { content: '项目B提交结项报告', timestamp: '2024-03-18 09:15', type: 'info' },\r\n        { content: '经费使用预警提醒', timestamp: '2024-03-17 16:45', type: 'warning' }\r\n      ],\r\n      todoList: [\r\n        { title: '项目C中期报告审核', deadline: '2024-03-25', status: '紧急' },\r\n        { title: '经费使用情况汇总', deadline: '2024-03-28', status: '待处理' },\r\n        { title: '项目验收材料准备', deadline: '2024-03-30', status: '待处理' },\r\n        { title: '季度工作总结', deadline: '2024-03-31', status: '紧急' }\r\n      ]\r\n    }\r\n  },\r\n  mounted() {\r\n    this.initProgressChart()\r\n    this.initBudgetChart()\r\n  },\r\n  methods: {\r\n    initProgressChart() {\r\n      const progressChart = echarts.init(this.$refs.progressChart)\r\n      progressChart.setOption({\r\n        title: { text: '项目进度追踪' },\r\n        tooltip: { trigger: 'axis' },\r\n        legend: { data: ['计划进度', '实际进度'] },\r\n        xAxis: {\r\n          type: 'category',\r\n          data: ['项目A', '项目B', '项目C', '项目D', '项目E']\r\n        },\r\n        yAxis: { type: 'value', max: 100 },\r\n        series: [\r\n          {\r\n            name: '计划进度',\r\n            type: 'bar',\r\n            data: [90, 75, 60, 45, 30]\r\n          },\r\n          {\r\n            name: '实际进度',\r\n            type: 'bar',\r\n            data: [85, 70, 55, 48, 28]\r\n          }\r\n        ]\r\n      })\r\n    },\r\n    initBudgetChart() {\r\n      const budgetChart = echarts.init(this.$refs.budgetChart)\r\n      budgetChart.setOption({\r\n        title: { \r\n          text: '经费使用分布',\r\n          left: 'left',\r\n          top: 10\r\n        },\r\n        tooltip: { \r\n          trigger: 'item',\r\n          formatter: '{b}: {c}%'\r\n        },\r\n        legend: { \r\n          orient: 'vertical',\r\n          right: 10,        // 图例位置调整到右侧\r\n          top: 'middle',    // 垂直居中\r\n          itemWidth: 25,\r\n          itemGap: 16\r\n        },\r\n        series: [\r\n          {\r\n            name: '经费占比',\r\n            type: 'pie',\r\n            radius: '55%',    // 调整饼图大小\r\n            center: ['35%', '50%'], // 将饼图左移，为右侧图例留出空间\r\n            itemStyle: {\r\n              borderColor: '#fff',\r\n              borderWidth: 2\r\n            },\r\n            label: {\r\n              show: true,\r\n              formatter: '{c}%'  // 只显示百分比\r\n            },\r\n            labelLine: {\r\n              show: true,\r\n              length: 10,\r\n              length2: 10\r\n            },\r\n            data: [\r\n              { value: 35, name: '设备费' },\r\n              { value: 25, name: '材料费' },\r\n              { value: 20, name: '人员费' },\r\n              { value: 15, name: '差旅费' },\r\n              { value: 5, name: '其他' }\r\n            ]\r\n          }\r\n        ]\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.dashboard-container {\r\n  padding: 20px;\r\n  background-color: #f0f2f5;\r\n  min-height: calc(100vh - 84px);\r\n}\r\n\r\n.mt20 {\r\n  margin-top: 20px;\r\n}\r\n\r\n.stat-card {\r\n  .stat-header {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n    margin-bottom: 10px;\r\n    \r\n    .stat-title {\r\n      font-size: 16px;\r\n      color: #606266;\r\n    }\r\n  }\r\n\r\n  .stat-number {\r\n    font-size: 28px;\r\n    font-weight: bold;\r\n    color: #303133;\r\n    margin: 10px 0;\r\n  }\r\n\r\n  .stat-footer {\r\n    color: #909399;\r\n    font-size: 14px;\r\n\r\n    .up {\r\n      color: #67C23A;\r\n      margin-left: 10px;\r\n    }\r\n\r\n    .down {\r\n      color: #F56C6C;\r\n      margin-left: 10px;\r\n    }\r\n  }\r\n}\r\n\r\n.chart-container {\r\n  padding: 10px;\r\n}\r\n\r\n.dynamic-list {\r\n  padding: 0 20px;\r\n}\r\n\r\n::v-deep .el-card__header {\r\n  padding: 15px 20px;\r\n  border-bottom: 1px solid #EBEEF5;\r\n  box-sizing: border-box;\r\n}\r\n</style>"]}]}